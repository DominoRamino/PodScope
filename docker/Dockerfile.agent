# PodScope Agent Dockerfile
# Uses multi-stage build for minimal image with libpcap

FROM golang:1.24-alpine AS builder

# Build arguments for versioning
ARG VERSION=dev
ARG BUILD_DATE=unknown
ARG GIT_COMMIT=unknown

WORKDIR /app

# Install build dependencies (libpcap-dev for gopacket)
RUN apk add --no-cache git gcc musl-dev libpcap-dev

# Copy go mod files
COPY go.mod go.sum* ./
RUN go mod download

# Copy source
COPY . .

# Build with static linking and version info
RUN CGO_ENABLED=1 GOOS=linux go build \
    -ldflags "-extldflags '-static' -X main.Version=${VERSION} -X main.BuildDate=${BUILD_DATE} -X main.GitCommit=${GIT_COMMIT}" \
    -tags netgo \
    -o agent ./cmd/agent

# Final minimal image
FROM alpine:3.19

# Build arguments for labels
ARG VERSION=dev
ARG BUILD_DATE=unknown
ARG GIT_COMMIT=unknown

# Add labels for image metadata
LABEL org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.created="${BUILD_DATE}" \
      org.opencontainers.image.revision="${GIT_COMMIT}" \
      org.opencontainers.image.title="PodScope Agent" \
      org.opencontainers.image.description="Network traffic capture agent for Kubernetes pods"

# Install libpcap runtime and network diagnostic tools
RUN apk add --no-cache \
    libpcap \
    ca-certificates \
    tcpdump \
    curl \
    bind-tools \
    netcat-openbsd \
    traceroute \
    wget

WORKDIR /app

# Copy binary
COPY --from=builder /app/agent /app/agent

# Agent runs as non-root but needs NET_RAW capability
# This is handled by the security context in k8s

ENV INTERFACE=eth0
ENV HUB_ADDRESS=podscope-hub:9090

ENTRYPOINT ["/app/agent"]
